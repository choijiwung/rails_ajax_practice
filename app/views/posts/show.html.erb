<%= form_tag create_comment_to_post_path, id: "comment" do%>
<%= text_field_tag :body %>
<%= submit_tag "댓글달기"%>
<% end%>

<script>
$(function(){
  var form = $('#comment');
  form.on('submit', function(e){
    e.preventDefault();
    var contents = $('#body').val();
    console.log(contents)
    $.ajax({
      url: "<%= create_comment_to_post_path%>",
      method: "POST",
      data: {body: contents}
    });
  });
})

</script>
